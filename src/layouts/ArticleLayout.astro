---
import PageLayout from "@/layouts/PageLayout.astro";
import Link from "@/components/Common/LinkAstro.astro";
import { Icon } from "astro-icon/components";
import Container from "@/components/Common/Container";

interface Props {
  title: string;
  pageTitle?: string;
  buttons?: Array<{
    href: string;
    icon: string;
    value: string;
    title?: string;
  }>;
  active?: string;
  class?: string;
}

const { title, pageTitle, buttons, active } = Astro.props;
const hasHeaderSlot = Astro.slots.has("header");
---

<PageLayout title={pageTitle || title} className="pt-32 pb-22">
  <Container thin>
    <div class="mb-12 flex items-center justify-between">
      <h1 class="text-5xl font-bold">{title}</h1>
      {hasHeaderSlot && <slot name="header" />}
      {
        !hasHeaderSlot && buttons && active && (
          <div class="join">
            {buttons.map((button) => (
              <Link
                href={button.href}
                class={`btn join-item ${active === button.value ? "btn-active" : ""}`}
                title={button.title || button.value}
              >
                <Icon name={button.icon} size={20} />
              </Link>
            ))}
          </div>
        )
      }
    </div>
    <div class="prose prose-lg max-w-none">
      <slot />
    </div>
  </Container>
</PageLayout>
