---
import Container from "@/components/Common/Container";
import PageLayout from "@/layouts/PageLayout.astro";
---

<PageLayout>
  <div class="flex flex-col gap-24 py-8 pt-24 pb-32">
    <Container wide className="flex flex-col gap-8 xl:gap-12 2xl:!gap-24">
      <slot name="before-layout" />
      <!-- hidden on desktop -->
      <div class="flex flex-col gap-8 lg:hidden">
        <slot name="mobile-header" />
      </div>
      <!-- column container -->
      <div class="flex flex-col gap-12 lg:flex-row xl:gap-24 2xl:!gap-42">
        <div class="flex flex-col gap-8 pb-18 lg:w-2/3">
          <slot name="main-content" />
        </div>
        <!-- hidden on mobile -->
        <div class="hidden flex-col gap-8 lg:flex lg:w-1/3">
          <slot name="before-sidebar" />
          <div class="sticky top-26 z-10 w-full self-start">
            <div class="flex flex-col gap-8 overflow-visible">
              <slot name="sidebar" />
            </div>
          </div>
        </div>
      </div>
    </Container>
    <slot name="after-content" />
  </div>
</PageLayout>
