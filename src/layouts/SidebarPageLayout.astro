---
import Container from "@/components/Common/Container";
import PageLayout from "@/layouts/PageLayout.astro";
---

<PageLayout>
  <div class="flex flex-col gap-24 py-8 pb-32">
    <Container class="flex w-full flex-col gap-8">
      <!-- hidden on desktop -->
      <div class="flex flex-col gap-8 lg:hidden">
        <slot name="mobile-header" />
      </div>
      <!-- column container -->
      <div class="flex flex-col gap-12 lg:flex-row">
        <div class="flex flex-col gap-8 pb-18 lg:w-2/3">
          <slot name="main-content" />
        </div>
        <!-- hidden on mobile -->
        <div class="sticky top-20 z-10 hidden self-start lg:block lg:w-1/3">
          <div class="flex flex-col gap-8 overflow-visible">
            <slot name="sidebar" />
          </div>
        </div>
      </div>
    </Container>
    <slot name="after-content" />
  </div>
</PageLayout>
