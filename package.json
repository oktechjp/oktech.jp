{
  "name": "oktech-web",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev --host",
    "build": "astro build",
    "preview": "astro preview --host",
    "start": "npm run build && npm run preview",
    "knip": "knip",
    "format": "prettier --write . --log-level warn",
    "typecheck": "npm-run-all -p typecheck:astro typecheck:tsc",
    "typecheck:tsc": "tsc --noEmit",
    "typecheck:astro": "astro check",
    "checks": "npm-run-all format typecheck knip",
    "import": "tsx ./scripts/import-data",
    "og-cache": "tsx scripts/manage-og-cache.ts",
    "extract-themes": "tsx scripts/extract-theme-colors.ts",
    "analyze-bundle": "ANALYZE_BUNDLE=true astro build && echo '\nðŸ“Š Bundle Analysis Complete! ðŸ“Š\n\nðŸ”— View stats at: http://localhost:4321/stats.html\n' && npm run preview",
    "test": "npm run test:dev",
    "test:dev": "playwright test",
    "test:screenshots": "rm -rf test/screenshots/output && TEST_TYPE=screenshots playwright test",
    "test:build": "npm run build && TEST_BUILD=true playwright test",
    "test:dist": "TEST_BUILD=true playwright test"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/react": "^4.3.0",
    "@astrojs/rss": "^4.0.12",
    "@fontsource-variable/martian-mono": "^5.2.6",
    "@fontsource-variable/noto-sans-jp": "^5.2.7",
    "@fontsource/lexend": "^5.2.9",
    "@playwright/test": "^1.53.1",
    "@react-spring/web": "^10.0.2",
    "@resvg/resvg-js": "^2.6.2",
    "@rollup/plugin-yaml": "^4.1.2",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.10",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "astro": "^5.13.1",
    "clsx": "^2.1.1",
    "daisyui": "^5.0.43",
    "dotenv": "^16.5.0",
    "fuse.js": "^7.1.0",
    "gray-matter": "^4.0.3",
    "knip": "^5.62.0",
    "mdast-util-to-string": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "osm-static-maps": "^4.0.2",
    "prettier": "3.6.0",
    "prettier-plugin-astro": "0.14.1",
