    "react-photo-album": "^3.1.0",
    "reading-time": "^1.5.0",
    "rollup-plugin-visualizer": "^6.0.3",
    "satori": "^0.15.2",
    "satori-html": "^0.3.2",
    "sharp": "^0.34.2",
    "slugify": "^1.6.6",
    "tailwindcss": "^4.1.10",
    "tsx": "^4.20.3",
    "tw-to-css": "^0.0.12",
    "typescript": "^5.8.3",
    "unist-util-visit": "^5.0.0",
